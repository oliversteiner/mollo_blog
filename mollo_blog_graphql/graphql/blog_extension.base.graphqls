
extend type Query {
  blog_posts(
    offset: Int = 0
    limit: Int = 10
  ): BlogPostConnection!
}

type BlogPost {
  id: Int!
  title: String!
  author: String
}

type BlogPostConnection {
  total: Int!
  items: [BlogPost!]
}


type BlogPostResponse implements Response {
  errors: [Violation]
  blog_post: BlogPost
}


input BlogPostInput {
  title: String!
  description: String
}
